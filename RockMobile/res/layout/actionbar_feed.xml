<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/feed"
        android:textColor="@color/black"
        android:textSize="@dimen/font_topbar_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/imageButton_feedNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView_title"
        android:background="@color/transparent"
        android:src="@drawable/btn_feed_notification_selector" />

    <TextView
        android:id="@+id/textView_notificationCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageButton_feedNotification"
        android:layout_alignTop="@+id/imageButton_feedNotification"
        android:background="@drawable/btn_feed_notification_badge_bg_normal"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:text="24"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>
